
import java.sql.*;
import java.util.*;
public class MySQL{
	
	private Statement stmt = null;
	private Connection conn = null;
	private String user = null;
	private int ID = 0;
	public MySQL(String name){
		user = name;
		String url = "jdbc:mysql://localhost:3306/";
		String dbName = "serwis";
		String driver = "com.mysql.jdbc.Driver";
		String userName = "root";
		String password = "";
		try {
			Class.forName(driver).newInstance();
			conn = DriverManager.getConnection(url+dbName,userName,password);
			stmt = conn.createStatement(ResultSet.TYPE_SCROLL_SENSITIVE, ResultSet.CONCUR_UPDATABLE);	
			} catch (Exception e) {
				e.printStackTrace();
			}
			ResultSet rs;
		try {
				System.out.println(name);
				rs = stmt.executeQuery("Select * from client where client_name = '"+name+"'");
				while(rs.next())
					ID = rs.getInt("client_id");
			} catch (SQLException e) {
				System.out.println("z rs");
				e.printStackTrace();
			}
			

		
		
}
public String getPassword(){
	ResultSet rs;
	String password = null;
	try {
		rs = stmt.executeQuery("Select * from client_password where client_id = '"+ID+"'");
		while(rs.next()){
		password = rs.getString("password");
		}
	} catch (SQLException e) {
		e.printStackTrace();
	}

	return password;
}
public String command(String command) throws SQLException{
	
	String Wynik  = null;
	Scanner sx = new Scanner(System.in);
	
			ResultSet rs = stmt.executeQuery(command);

			int i=1;
			while (rs.next()) {
				rs.getArray(i);
				i++;
				
			}
			System.out.println(rs);
	
	return Wynik;
 	}
	
public void Close() throws SQLException{
	conn.close();
}



}